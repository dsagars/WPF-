<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test" 
        mc:Ignorable="d"
        Title="Company" Height="500" Width="700" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Border Padding="2" Background="White" BorderThickness="5">
    <Grid x:Name="MainGrid" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="CompanyNameTextBox" Grid.Row="0" Background="#FF919AB0"  Grid.Column="0" Text="Company Name" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontWeight="SemiBold"/>
        <TextBlock x:Name="MainCompanyTextBox" Grid.Row="0" Background="#FF919AB0" Grid.Column="1" Text="Main Company?" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontWeight="SemiBold"/>
        <TextBlock x:Name="CompanyLogoTextBox" Grid.Row="0" Background="#FF919AB0" Grid.Column="2" Text="Company Logo" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontWeight="SemiBold"/>
        <Button x:Name="btn1" Grid.Column="0" Grid.Row="1" Background="White" FontSize="20" Height="40" Width="140">FirstCompany</Button>
        <Button x:Name="btn2" Grid.Column="0" Grid.Row="2" Background="White" FontSize="20" Height="40" Width="140">SecondCompany</Button>
        <Button x:Name="btn3" Grid.Column="0" Grid.Row="3" Background="White" FontSize="20" Height="40" Width="140">ThirdCompany</Button>
        <Button x:Name="btn4" Grid.Column="0" Grid.Row="4" Background="White" FontSize="20" Height="40" Width="140">FourthCompany</Button>
    </Grid>
    </Border>
</Window>
       
